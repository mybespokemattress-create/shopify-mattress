<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Mattress Order Processor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/admin">
                <i class="fas fa-bed me-2"></i>Mattress Order Processor
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin"><i class="fas fa-home me-1"></i>Dashboard</a>
                <a class="nav-link" href="/admin/mappings"><i class="fas fa-link me-1"></i>Mappings</a>
                <a class="nav-link" href="/admin/stores"><i class="fas fa-store me-1"></i>Stores</a>
                <a class="nav-link active" href="/admin/orders"><i class="fas fa-shopping-cart me-1"></i>Orders</a>
                <a class="nav-link" href="/admin/upload"><i class="fas fa-upload me-1"></i>Upload</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1><i class="fas fa-shopping-cart me-2"></i><%= title %></h1>
                <p class="text-muted">View and manage processed orders from all your Shopify stores</p>
            </div>
        </div>

        <!-- Order Stats -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Order Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h4 class="text-primary"><%= orders.length %></h4>
                                <p class="text-muted">Total Orders</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-success">
                                    <%= orders.filter(o => o.processing_status === 'completed').length %>
                                </h4>
                                <p class="text-muted">Completed</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-warning">
                                    <%= orders.filter(o => o.processing_status === 'needs_mapping').length %>
                                </h4>
                                <p class="text-muted">Need Mapping</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-danger">
                                    <%= orders.filter(o => o.processing_status === 'error').length %>
                                </h4>
                                <p class="text-muted">Errors</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Controls -->
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-filter"></i>
                    </span>
                    <select class="form-select" id="statusFilter" onchange="filterOrders()">
                        <option value="">All Statuses</option>
                        <option value="received">Received</option>
                        <option value="needs_mapping">Needs Mapping</option>
                        <option value="sheets_updated">Sheets Updated</option>
                        <option value="po_generated">PO Generated</option>
                        <option value="completed">Completed</option>
                        <option value="error">Error</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" class="form-control" id="searchInput" 
                           placeholder="Search orders..." onkeyup="filterOrders()">
                </div>
            </div>
        </div>

        <!-- Orders Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Orders</h5>
                        <div>
                            <button class="btn btn-sm btn-outline-secondary" onclick="refreshOrders()">
                                <i class="fas fa-sync-alt me-1"></i>Refresh
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (orders.length === 0) { %>
                            <div class="alert alert-info text-center">
                                <i class="fas fa-info-circle me-2"></i>
                                No orders processed yet
                                <br><small class="text-muted">Orders will appear here when webhooks are received from your Shopify stores</small>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover" id="ordersTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Order #</th>
                                            <th>Store</th>
                                            <th>Customer</th>
                                            <th>Status</th>
                                            <th>Sheets</th>
                                            <th>PO</th>
                                            <th>Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                            <tr class="order-row" 
                                                data-status="<%= order.processing_status %>"
                                                data-search="<%= order.shopify_order_number %> <%= order.customer_name %> <%= order.customer_email %> <%= order.store_domain %>">
                                                <td>
                                                    <strong>#<%= order.shopify_order_number %></strong>
                                                    <br><small class="text-muted">ID: <%= order.order_id %></small>
                                                </td>
                                                <td>
                                                    <small><%= order.store_domain %></small>
                                                </td>
                                                <td>
                                                    <strong><%= order.customer_name %></strong>
                                                    <br><small class="text-muted"><%= order.customer_email %></small>
                                                </td>
                                                <td>
                                                    <% 
                                                    let badgeClass = 'secondary';
                                                    let icon = 'fa-circle';
                                                    
                                                    switch(order.processing_status) {
                                                        case 'completed':
                                                            badgeClass = 'success';
                                                            icon = 'fa-check-circle';
                                                            break;
                                                        case 'error':
                                                            badgeClass = 'danger';
                                                            icon = 'fa-exclamation-triangle';
                                                            break;
                                                        case 'needs_mapping':
                                                            badgeClass = 'warning';
                                                            icon = 'fa-exclamation-circle';
                                                            break;
                                                        case 'received':
                                                            badgeClass = 'info';
                                                            icon = 'fa-clock';
                                                            break;
                                                        case 'sheets_updated':
                                                            badgeClass = 'primary';
                                                            icon = 'fa-table';
                                                            break;
                                                        case 'po_generated':
                                                            badgeClass = 'success';
                                                            icon = 'fa-file-alt';
                                                            break;
                                                    }
                                                    %>
                                                    <span class="badge bg-<%= badgeClass %>">
                                                        <i class="fas <%= icon %> me-1"></i>
                                                        <%= order.processing_status.replace('_', ' ') %>
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <% if (order.sheets_updated) { %>
                                                        <i class="fas fa-check-circle text-success"></i>
                                                    <% } else { %>
                                                        <i class="fas fa-times-circle text-muted"></i>
                                                    <% } %>
                                                </td>
                                                <td class="text-center">
                                                    <% if (order.po_generated) { %>
                                                        <i class="fas fa-check-circle text-success"></i>
                                                    <% } else { %>
                                                        <i class="fas fa-times-circle text-muted"></i>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <small>
                                                        <%= new Date(order.created_date).toLocaleDateString() %>
                                                        <br>
                                                        <%= new Date(order.created_date).toLocaleTimeString() %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <button class="btn btn-outline-info btn-sm" 
                                                                onclick="viewOrderDetails('<%= order.order_id %>', '<%= order.store_domain %>')">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                        <% if (order.processing_status === 'error' || order.processing_status === 'needs_mapping') { %>
                                                            <button class="btn btn-outline-warning btn-sm"
                                                                    onclick="retryOrder('<%= order.order_id %>', '<%= order.store_domain %>')">
                                                                <i class="fas fa-redo"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Details Modal -->
    <div class="modal fade" id="orderModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Order Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="orderDetails">
                    <!-- Order details will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterOrders() {
            const statusFilter = document.getElementById('statusFilter').value.toLowerCase();
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('.order-row');

            rows.forEach(row => {
                const status = row.getAttribute('data-status').toLowerCase();
                const searchData = row.getAttribute('data-search').toLowerCase();
                
                const statusMatch = !statusFilter || status === statusFilter;
                const searchMatch = !searchInput || searchData.includes(searchInput);
                
                if (statusMatch && searchMatch) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function refreshOrders() {
            location.reload();
        }

        function viewOrderDetails(orderId, storeDomain) {
            // In a real implementation, this would fetch order details via AJAX
            document.getElementById('orderDetails').innerHTML = `
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Order details functionality will be implemented in Phase 2.
                </div>
                <p><strong>Order ID:</strong> ${orderId}</p>
                <p><strong>Store:</strong> ${storeDomain}</p>
                <p><em>Full order details, product information, and measurements will be displayed here.</em></p>
            `;
            
            new bootstrap.Modal(document.getElementById('orderModal')).show();
        }

        function retryOrder(orderId, storeDomain) {
            if (confirm('Retry processing this order?')) {
                // In a real implementation, this would trigger order reprocessing
                alert('Order retry functionality will be implemented in Phase 2.');
            }
        }
    </script>
</body>
</html>