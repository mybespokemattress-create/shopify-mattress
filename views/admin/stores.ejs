<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Mattress Order Processor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/admin">
                <i class="fas fa-bed me-2"></i>Mattress Order Processor
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin"><i class="fas fa-home me-1"></i>Dashboard</a>
                <a class="nav-link" href="/admin/mappings"><i class="fas fa-link me-1"></i>Mappings</a>
                <a class="nav-link active" href="/admin/stores"><i class="fas fa-store me-1"></i>Stores</a>
                <a class="nav-link" href="/admin/orders"><i class="fas fa-shopping-cart me-1"></i>Orders</a>
                <a class="nav-link" href="/admin/upload"><i class="fas fa-upload me-1"></i>Upload</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1><i class="fas fa-store me-2"></i><%= title %></h1>
                <p class="text-muted">Manage your connected Shopify stores and webhook configuration</p>
            </div>
        </div>

        <!-- Store Status Overview -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Store Overview</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h3 class="text-success"><%= stores.length %></h3>
                                <p class="text-muted">Active Stores</p>
                            </div>
                            <div class="col-md-4">
                                <h3 class="text-info"><%= stores.length %></h3>
                                <p class="text-muted">Webhooks Configured</p>
                            </div>
                            <div class="col-md-4">
                                <h3 class="text-primary">1</h3>
                                <p class="text-muted">Shared Database</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Configured Stores -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Configured Stores</h5>
                    </div>
                    <div class="card-body">
                        <% if (stores.length === 0) { %>
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>No stores configured in database
                            </div>
                        <% } else { %>
                            <div class="row">
                                <% stores.forEach((store, index) => { %>
                                    <div class="col-lg-6 mb-4">
                                        <div class="card border-success">
                                            <div class="card-header bg-light">
                                                <h6 class="mb-0">
                                                    <i class="fas fa-check-circle text-success me-2"></i>
                                                    <strong><%= store.store_name %></strong>
                                                </h6>
                                            </div>
                                            <div class="card-body">
                                                <div class="mb-3">
                                                    <strong>Store Domain:</strong><br>
                                                    <code><%= store.store_domain %></code>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <strong>Webhook URL:</strong><br>
                                                    <code class="small">https://your-app.railway.app/webhook/orders/create</code>
                                                    <button class="btn btn-sm btn-outline-secondary ms-2" 
                                                            onclick="copyToClipboard('https://your-app.railway.app/webhook/orders/create')">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <strong>Status:</strong>
                                                    <% if (store.active) { %>
                                                        <span class="badge bg-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">Inactive</span>
                                                    <% } %>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <strong>Connected Since:</strong><br>
                                                    <small class="text-muted">
                                                        <%= new Date(store.created_date).toLocaleDateString() %>
                                                    </small>
                                                </div>
                                                
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <a href="https://<%= store.store_domain %>/admin" 
                                                           target="_blank" 
                                                           class="btn btn-sm btn-outline-primary w-100">
                                                            <i class="fas fa-external-link-alt me-1"></i>Admin
                                                        </a>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <button class="btn btn-sm btn-outline-success w-100"
                                                                onclick="testWebhook('<%= store.store_domain %>')">
                                                            <i class="fas fa-plug me-1"></i>Test
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Webhook Configuration Instructions -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-cogs me-2"></i>Webhook Configuration Instructions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Important:</strong> Make sure to configure webhooks in each Shopify store admin
                        </div>
                        
                        <h6>Steps to configure webhooks:</h6>
                        <ol>
                            <li>Go to your <strong>Shopify Admin</strong></li>
                            <li>Navigate to <strong>Settings â†’ Notifications</strong></li>
                            <li>Scroll down to <strong>"Webhooks"</strong> section</li>
                            <li>Click <strong>"Create webhook"</strong></li>
                            <li>Configure:</li>
                            <ul>
                                <li><strong>Event:</strong> Order creation</li>
                                <li><strong>Format:</strong> JSON</li>
                                <li><strong>URL:</strong> <code>https://your-app.railway.app/webhook/orders/create</code></li>
                            </ul>
                            <li>Click <strong>"Save webhook"</strong></li>
                        </ol>

                        <div class="mt-3">
                            <h6>Webhook URL for all stores:</h6>
                            <div class="input-group">
                                <input type="text" 
                                       class="form-control" 
                                       value="https://your-app.railway.app/webhook/orders/create" 
                                       id="webhookUrl" 
                                       readonly>
                                <button class="btn btn-outline-secondary" 
                                        onclick="copyToClipboard('https://your-app.railway.app/webhook/orders/create')">
                                    <i class="fas fa-copy"></i> Copy
                                </button>
                            </div>
                            <div class="form-text">
                                Replace "your-app" with your actual Railway app domain
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Test Results Modal -->
    <div class="modal fade" id="testModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Webhook Test Result</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="testResult">
                    <!-- Test results will be inserted here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Show success feedback
                const btn = event.target.closest('button');
                const originalHTML = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check"></i> Copied!';
                btn.classList.remove('btn-outline-secondary');
                btn.classList.add('btn-success');
                
                setTimeout(() => {
                    btn.innerHTML = originalHTML;
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-outline-secondary');
                }, 2000);
            });
        }

        function testWebhook(storeDomain) {
            // Simple test - just verify the webhook endpoint is accessible
            fetch('/webhook/test')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('testResult').innerHTML = `
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>Webhook endpoint is accessible!
                        </div>
                        <h6>Response:</h6>
                        <pre class="small">${JSON.stringify(data, null, 2)}</pre>
                        <div class="mt-3">
                            <small class="text-muted">
                                This confirms the webhook endpoint is working. 
                                Test with a real order from ${storeDomain} to verify full functionality.
                            </small>
                        </div>
                    `;
                    new bootstrap.Modal(document.getElementById('testModal')).show();
                })
                .catch(error => {
                    document.getElementById('testResult').innerHTML = `
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>Webhook test failed!
                        </div>
                        <h6>Error:</h6>
                        <pre class="small">${error.message}</pre>
                    `;
                    new bootstrap.Modal(document.getElementById('testModal')).show();
                });
        }
    </script>
</body>
</html>