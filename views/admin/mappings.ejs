<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Mattress Order Processor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/admin">
                <i class="fas fa-bed me-2"></i>Mattress Order Processor
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin"><i class="fas fa-home me-1"></i>Dashboard</a>
                <a class="nav-link active" href="/admin/mappings"><i class="fas fa-link me-1"></i>Mappings</a>
                <a class="nav-link" href="/admin/stores"><i class="fas fa-store me-1"></i>Stores</a>
                <a class="nav-link" href="/admin/orders"><i class="fas fa-shopping-cart me-1"></i>Orders</a>
                <a class="nav-link" href="/admin/upload"><i class="fas fa-upload me-1"></i>Upload</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1><i class="fas fa-link me-2"></i><%= title %></h1>
                <p class="text-muted">Manage product mappings between Shopify and supplier specifications</p>
            </div>
        </div>

        <!-- Success/Error Messages -->
        <% if (typeof success !== 'undefined') { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>Success!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Stats and Actions -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mapping Statistics</h5>
                        <p class="card-text">
                            <strong><%= stats.total %></strong> total mappings<br>
                            <strong><%= stats.withShapes %></strong> with shape assignments<br>
                            <strong><%= stats.percentage %>%</strong> completion rate
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Quick Actions</h5>
                        <a href="/admin/mappings/add" class="btn btn-primary me-2">
                            <i class="fas fa-plus me-1"></i>Add New Mapping
                        </a>
                        <a href="/admin/upload" class="btn btn-success">
                            <i class="fas fa-upload me-1"></i>Bulk Upload
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search -->
        <div class="row mb-3">
            <div class="col-12">
                <form method="GET" class="d-flex">
                    <input type="text" name="search" class="form-control me-2" 
                           placeholder="Search by SKU or specification..." 
                           value="<%= search %>">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i>
                    </button>
                    <% if (search) { %>
                        <a href="/admin/mappings" class="btn btn-outline-secondary ms-2">Clear</a>
                    <% } %>
                </form>
            </div>
        </div>

        <!-- Mappings Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Product Mappings</h5>
                    </div>
                    <div class="card-body">
                        <% if (mappings.length === 0) { %>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <% if (search) { %>
                                    No mappings found for "<%= search %>"
                                <% } else { %>
                                    No product mappings found. <a href="/admin/mappings/add">Add your first mapping</a>
                                <% } %>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Shopify SKU</th>
                                            <th>Supplier Specification</th>
                                            <th>Shape ID</th>
                                            <th>Updated</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% mappings.forEach(mapping => { %>
                                            <tr>
                                                <td><strong><%= mapping.shopify_sku %></strong></td>
                                                <td class="text-truncate" style="max-width: 300px;">
                                                    <%= mapping.supplier_specification %>
                                                </td>
                                                <td>
                                                    <% if (mapping.shape_id) { %>
                                                        <span class="badge bg-info"><%= mapping.shape_id %></span>
                                                    <% } else { %>
                                                        <span class="text-muted">No shape</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <small><%= new Date(mapping.updated_date).toLocaleDateString() %></small>
                                                </td>
                                                <td>
                                                    <a href="/admin/mappings/edit/<%= mapping.shopify_sku %>" 
                                                       class="btn btn-sm btn-outline-primary me-1">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-danger" 
                                                            onclick="confirmDelete('<%= mapping.shopify_sku %>')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this mapping?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete(sku) {
            document.getElementById('deleteForm').action = `/admin/mappings/delete/${sku}`;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
</body>
</html>
